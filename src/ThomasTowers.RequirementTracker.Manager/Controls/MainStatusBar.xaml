<UserControl x:Class="ThomasTowers.RetirementTracker.Manager.Controls.MainStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThomasTowers.RetirementTracker.Manager.Controls"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource Locator}, Path=MainStatusBarViewModel}">
    <StatusBar>
        <StatusBarItem>
            <TextBlock Text="{Binding Message}" />
        </StatusBarItem>
    </StatusBar>
</UserControl>
